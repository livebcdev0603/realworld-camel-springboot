<route id="direct_returnArticle"
  routeConfigurationId="generic-error,no-such-object-error"
  xmlns="http://camel.apache.org/schema/spring">

  <from uri="direct:returnArticle" />

  <setProperty name="__checkFollow"><simple>${body.author}</simple></setProperty>
  <to uri="sql:classpath:sql/check-follow.sql?outputType=SelectOne&amp;outputHeader=__me_follower" />

  <setProperty name="articleIds">
    <groovy>[request.body.id]</groovy>
  </setProperty>

  <to uri="sql:classpath:sql/favorites-for-articles.sql?outputHeader=__favorites&amp;outputType=SelectOne" />

  <marshal><json /></marshal>
  <to uri="jslt:classpath:jslt/article-resp.jslt" />
  <removeHeader name="__favorites" />
  <removeHeader name="__me_follower" />

  <unmarshal><json
    library="Jackson"
    unmarshalType="com.github.jacekszymanski.realcamel.model.CreateArticle201Response"
    disableFeatures="FAIL_ON_UNKNOWN_PROPERTIES"
  /></unmarshal>

</route>
