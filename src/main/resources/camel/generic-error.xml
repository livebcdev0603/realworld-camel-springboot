<routeConfigurations>
  <routeConfiguration id="generic-error">
    <onException>
      <exception>com.github.jacekszymanski.realcamel.RouteException</exception>
      <handled>
        <constant>true</constant>
      </handled>

      <log message="exception ${exception}" logName="com.github.jacekszymanski.realcamel" loggingLevel="DEBUG"/>

      <setHeader name="CamelHttpResponseCode">
        <simple>${exception.reason}</simple>
      </setHeader>

      <to uri="direct:returnError" />
    </onException>

    <onException>
      <exception>java.lang.Exception</exception>
      <handled>
        <constant>true</constant>
      </handled>

      <log message="exception ${exception} ${messageHistory} ${exception.stacktrace}"
           logName="com.github.jacekszymanski.realcamel" loggingLevel="WARN"/>

      <setHeader name="CamelHttpResponseCode">
        <constant>500</constant>
      </setHeader>

      <to uri="direct:returnError" />
    </onException>


  </routeConfiguration>
</routeConfigurations>
